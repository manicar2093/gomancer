package layouts

import "github.com/manicar2093/gomancer/bootstrap/core"
import "github.com/manicar2093/gomancer/bootstrap/core/coretpls/toast"

templ showFlash(echoCtx *core.EchoContextTemplWrapper) {
	{{ flashes := echoCtx.GetFlash() }}
	for _, flash := range flashes {
		@toast.Toast(toast.Props{
			Icon:          true,
			Variant:      toast.Variant(flash.Variant),
			Title:         flash.Title,
			Description:   flash.Message,
			Dismissible:   true,
			ShowIndicator: true,
		})
	}
}